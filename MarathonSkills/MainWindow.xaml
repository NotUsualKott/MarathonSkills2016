                <RowDefinition Height="30*"/>
                <RowDefinition Height="42*"/>
            </Grid.RowDefinitions>
            <Label Content="MARATHON SKILLS 2016"  FontSize="30" HorizontalContentAlignment="Center" Foreground="White" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Height="45" Width="500" FontWeight="Bold" Grid.ColumnSpan="5"/>
